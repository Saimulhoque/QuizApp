<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/small"
    android:layout_marginBottom="@dimen/small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:padding="@dimen/medium"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tick"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_question"/>

            <TextView
                android:layout_marginStart="@dimen/medium"
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small"
                android:text="Cat"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/usual"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/usual">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one">

                <ImageView
                    android:id="@+id/iv_opt_one"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/medium"
                    android:id="@+id/opt_one"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two">

                <ImageView
                    android:id="@+id/iv_opt_two"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/medium"
                    android:id="@+id/opt_two"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/three">

                <ImageView
                    android:id="@+id/iv_opt_three"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/medium"
                    android:id="@+id/opt_three"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_opt_four"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/medium"
                    android:id="@+id/opt_four"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_opt_five"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/medium"
                    android:id="@+id/opt_five"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small"/>

            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</android.support.v7.widget.CardView>