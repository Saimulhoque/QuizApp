<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

        <item name="radioButtonStyle">@style/MyRadioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
    </style>

   <!-- <style name="MyButtonStyle">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>-->

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/my_radio_selector</item>
        <item name="buttonTint">@drawable/my_radio_selector</item>
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
    </style>


    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@color/colorAccent</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@color/colorAccent</item>
        <item name="android:centerMedium">@color/colorAccent</item>
        <item name="android:fullBright">@color/colorAccent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>


    <style name="NameTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/small</item>
    </style>

    <style name="EmailTextStyle" parent="NameTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="NavTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#777777</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


</resources>
